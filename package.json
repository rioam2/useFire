{
    "name": "usefire",
    "license": "MIT",
    "version": "1.1.6",
    "author": "rioam2",
    "homepage": "https://www.npmjs.com/package/usefire",
    "description": "âš“ Useful React Hooks for quick and easy Firebase/Firestore integration",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rioam2/useFire.git"
    },
    "bugs": {
        "url": "https://github.com/rioam2/useFire/issues"
    },
    "keywords": [
        "react-hook",
        "firebase",
        "firestore",
        "react",
        "real-time",
        "database"
    ],
    "scripts": {
        "build": "rm -rf ./dist && tsc",
        "pretest": "yarn build",
        "test": "nyc mocha --exit",
        "watch": "mocha --watch",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "prepublishOnly": "yarn test"
    },
    "files": [
        "dist/**"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "[ ! -f initialize.sh ] || initialize.sh && yarn test && yarn embedme README.md"
        }
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text"
        ],
        "sourceMap": true,
        "instrument": true
    },
    "devDependencies": {
        "@testing-library/react-hooks": "^3.1.0",
        "@types/chai": "^4.1.7",
        "@types/dotenv": "^8.2.0",
        "@types/mocha": "^7.0.1",
        "@types/react": "^16.8.23",
        "chai": "^4.2.0",
        "coveralls": "^3.0.3",
        "dotenv": "^8.0.0",
        "embedme": "^1.15.0",
        "firebase": "^7.0.0",
        "husky": "^4.0.1",
        "mocha": "^6.0.2",
        "nyc": "^15.0.0",
        "react": "^16.8.6",
        "react-test-renderer": "16.12.0",
        "source-map-support": "^0.5.10",
        "ts-node": "^8.0.2",
        "tslint": "^6.0.0",
        "typescript": "^3.5.3"
    }
}
